" Visual GVim
set go-=T
set go-=b
set go-=B
set go-=r
set go-=R
set go-=l
set go-=L

" Setup
set autoread
syn on
filetype plugin indent on
set smartcase
set ignorecase
set nu
set ruler

" Color Theme
colorscheme molokai

" Tab Space
set ts=4
set sts=4
set sw=4
set noexpandtab

" Font
set guifont=Droid\ Sans\ Mono\ 11
